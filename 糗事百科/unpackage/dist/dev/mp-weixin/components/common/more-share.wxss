.more-share {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 20;
  background-color: #fff;
}
.more-share .more-share-title, .more-share .more-share-cancel {
  padding: 25rpx;
  font-size: 32rpx;
}
.more-share .more-share-content {
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  white-space: nowrap;
  height: 200rpx;
  border-bottom: 1rpx solid #ccc;
}
.more-share .more-share-content .more-share-item {
  display: -webkit-inline-box;
  display: -webkit-inline-flex;
  display: inline-flex;
  width: 25%;
  height: 200rpx;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.more-share .more-share-content .more-share-item .icon {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 1rpx solid;
  font-size: 50rpx;
  color: #fff;
  background-color: #333333;
}
.more-share .more-share-content .more-share-item .icon-text {
  color: #7c7c7c;
  margin-top: 10rpx;
}
.more-share .btn-tap {
  background-color: #eee;
}
.more-share-model {
  background: rgba(0, 0, 0, 0.3);
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 19;
}

